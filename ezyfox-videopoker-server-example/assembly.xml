<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>bin</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>

	<dependencySets>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>com.smartfoxserver:sfs2x-core</exclude>
				<exclude>com.smartfoxserver:sfs2x-v2</exclude>
				<exclude>log4j:log4j</exclude>
				<exclude>org.slf4j:slf4j-log4j12</exclude>
				<exclude>org.slf4j:slf4j-api</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>/config</outputDirectory>
			<includes>
				<include>config.properties</include>
				<include>extension.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>ezyfox-videopoker-server-example.zone.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/com/lagente/config</directory>
			<outputDirectory>resources/com/lagente/config</outputDirectory>
		</fileSet>

		<!-- <fileSet> <directory>target/classes</directory> <outputDirectory>classes</outputDirectory> 
			</fileSet> -->
	</fileSets>
</assembly>